{
	"actorSpecification": 1,
	"name": "falabella-product-scraper",
	"title": "Falabella Product Scraper",
	"description": "Scrapes product listings from Falabella.com.co based on search queries. Returns structured product data including brand, title, price, discounts, and product URLs. Supports price filtering and max product limits.",
	"version": "1.0",
	"meta": {
		"templateId": "ts-start",
		"model": "claude-sonnet-4"
	},
	"input": "./input_schema.json",
	"output": "./output_schema.json",
	"storages": {
		"dataset": {
			"actorSpecification": 1,
			"title": "Dataset",
			"description": "Scraped products or pages from Falabella.com.co",
			"views": {
				"results": {
					"title": "Overview",
					"description": "It can take about one minute until the first results are available.",
					"transformation": {
						"fields": [
							"image",
							"title",
							"price",
							"oldPrice",
							"discount",
							"priceNumeric",
							"oldPriceNumeric",
							"url"
						]
					},
					"display": {
						"component": "table",
						"properties": {
							"image": {
								"label": "Imagen",
								"format": "image"
							},
							"title": {
								"label": "Título",
								"format": "text"
							},
							"price": {
								"label": "Precio",
								"format": "text"
							},
							"oldPrice": {
								"label": "Precio Original",
								"format": "text"
							},
							"discount": {
								"label": "Descuento",
								"format": "text"
							},
							"priceNumeric": {
								"label": "Precio (Numérico)",
								"format": "number"
							},
							"oldPriceNumeric": {
								"label": "Precio Original (Numérico)",
								"format": "number"
							},
							"url": {
								"label": "Enlace",
								"format": "link"
							}
						}
					}
				}
			}
		}
	},
	"dockerfile": "../Dockerfile"
}
